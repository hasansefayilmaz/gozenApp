@using Microsoft.AspNetCore.Mvc.Rendering
@using Gozen.Models.DTO.Enums
@model IEnumerable<Gozen.Models.DTO.PassengerDto>

@{
    ViewData["Title"] = "Passengers";
}

<h1>Passengers</h1>

<p>
    @Html.RouteLink("Create New", "Create", new { scenario = ViewBag.Scenario }, new { @class = "btn btn-success my-2" })
    @*<a asp-action="Create">Create New</a>*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>*@
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Html.GetEnumSelectList<Gender>().ToList().Find(x => x.Value == item.Gender.ToString()).Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>*@
                <td>
                    @Html.RouteLink("Details", "Details", new { scenario = ViewBag.Scenario, id = item.Id }, new { @class = "btn btn-secondary my-2" }) |
                    @Html.RouteLink("Edit", "Edit", new { scenario = ViewBag.Scenario, id = item.Id }, new { @class = "btn btn-dark my-2" }) |
                    @Html.RouteLink("Delete", "Delete", new { scenario = ViewBag.Scenario, id = item.Id }, new { @class = "btn btn-danger my-2" })
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }
    </tbody>
</table>